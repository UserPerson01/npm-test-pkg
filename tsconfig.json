{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "declaration": true,
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
